<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="135"
            android:toDegrees="135"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:innerRadiusRatio="2.5"
                android:shape="ring"
                android:thicknessRatio="25.0" >
                <gradient
                    android:angle="120"
                    android:startColor="@color/colorProgress1"
                    android:centerColor="@color/colorProgress2"
                    android:endColor="@color/colorProgress3"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>

